# Streamlit Cloud Secrets Configuration
# Copy this file to .streamlit/secrets.toml and fill in your values
# DO NOT commit secrets.toml to version control!

# Example configuration:
# [database]
# host = "your-database-host"
# port = 5432
# name = "sports_predictions"
# user = "your-username"
# password = "your-password"

# [api_keys]
# sports_data_api = "your-api-key"
# odds_api = "your-odds-api-key"

# [features]
# enable_live_predictions = true
# enable_betting_analysis = true
# max_predictions_per_day = 100
